<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/white_tile"
        android:id="@+id/add_edit_match_constraint_view"
        >

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/main_add_edit_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/lightGrey"
            app:cardCornerRadius="5dp"
            android:elevation="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent=".95"
            app:layout_constraintHeight_percent=".4"
            android:layout_marginTop="20dp"
        >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/matchNameTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/match_name"
                    app:helperTextEnabled="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/matchNameText"

                        />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/wTimeTextField"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/matchNameTextField"
                    android:layout_toLeftOf="@id/wIncrementTextField"
                    app:helperText="Duration"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxBackgroundColor="@color/lightGrey"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="00:00:00"
                        android:id="@+id/wTimeText"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/wIncrementTextField"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/matchNameTextField"
                    android:layout_marginTop="15dp"
                    app:helperText="Increment"
                    android:layout_centerInParent="true"
                    app:boxStrokeColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/wIncrementText"
                        android:hint="00:00"
                        />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/wDelayTextField"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/matchNameTextField"
                    android:layout_toRightOf="@id/wIncrementTextField"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="25dp"
                    app:helperText="Delay"
                    app:boxStrokeColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/wDelayText"
                        android:hint="00:00"

                        />
            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                    android:id="@+id/bView"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/wIncrementTextField"
                    android:layout_above="@id/same_for_black_switch">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bTimeTextField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/bIncrementTextField"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="25dp"
                        app:helperText="Duration"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxBackgroundColor="@color/Grey"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/bTimeText"
                            android:hint="00:00:00"

                            />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bIncrementTextField"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:boxBackgroundColor="@color/Grey"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:helperText="Increment">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bIncrementText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="00:00" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/bDelayTextField"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/bIncrementTextField"
                        android:layout_marginLeft="25dp"
                        app:helperText="Delay"
                        app:boxStrokeColor="@color/colorPrimary"
                        app:boxBackgroundColor="@color/Grey"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/bDelayText"
                            android:hint="00:00"

                            />
                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>


            <androidx.appcompat.widget.SwitchCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:hint="@string/same_for_black"
                    android:layout_alignParentBottom="true"
                    android:padding="10dp"
                    android:id="@+id/same_for_black_switch"
                    ></androidx.appcompat.widget.SwitchCompat>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>


