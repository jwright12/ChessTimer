<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        >

    <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/match_title_text_view"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/match_type_image_view"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                />

        <ImageView
            android:id="@+id/match_type_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/blitz_24dp"
            android:layout_alignParentRight="true"
            />

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightGrey"
                android:id="@+id/white_time_cardview"
                android:layout_below="@id/match_title_text_view"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
            >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                >

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_timer_24dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/white_time_logo"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    />

                <TextView
                        android:id="@+id/white_duration_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/white_time_logo"
                        android:fontFamily="@font/monaco"
                        android:textColor="@color/Grey"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:text="10:00:00" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/Grey"
                android:id="@+id/black_time_cardview"
                android:layout_below="@id/white_time_cardview"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_timer_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/black_time_logo"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        />

                <TextView
                        android:id="@+id/black_duration_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/black_time_logo"
                        android:fontFamily="@font/monaco"
                        android:textColor="@color/lightGrey"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:text="10:00:00" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightGrey"
                android:id="@+id/white_increment_cardview"
                android:layout_below="@id/match_title_text_view"
                android:layout_toLeftOf="@id/white_delay_cardview"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_arrow_upward_grey_24dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/white_increment_logo"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        />

                <TextView
                        android:id="@+id/white_increment_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/white_increment_logo"
                        android:fontFamily="@font/monaco"
                        android:textColor="@color/Grey"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:text="15s" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/lightGrey"
                android:id="@+id/white_delay_cardview"
                android:layout_below="@id/match_title_text_view"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_pause_24dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/white_delay_logo"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        />

                <TextView
                        android:id="@+id/white_delay_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/white_delay_logo"
                        android:fontFamily="@font/monaco"
                        android:textColor="@color/Grey"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:text="15s" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/Grey"
                android:id="@+id/black_delay_cardview"
                android:layout_below="@id/white_delay_cardview"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_pause_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/black_delay_logo"
                        android:layout_centerVertical="true"
                        android:padding="3dp"
                        />

                <TextView
                        android:id="@+id/black_delay_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/black_delay_logo"
                        android:fontFamily="@font/monaco"
                        android:textColor="@color/lightGrey"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:text="15s" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/Grey"
                android:id="@+id/black_increment_cardview"
                android:layout_below="@id/white_increment_cardview"
                android:layout_toLeftOf="@id/black_delay_cardview"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                >

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_arrow_upward_black_24dp"
                        android:layout_alignParentLeft="true"
                        android:id="@+id/black_increment_logo"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        />

                <TextView
                        android:id="@+id/black_increment_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@id/black_increment_logo"
                        android:fontFamily="@font/monaco"
                        android:textColor="@color/lightGrey"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:text="15s" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
</androidx.cardview.widget.CardView>