<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotation="0"
        android:id="@+id/constraint_view"
        tools:context=".MatchActivity"
       >

    <androidx.cardview.widget.CardView
            android:id="@+id/white_inc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="25dp"
            app:cardBackgroundColor="@color/Grey"
            app:cardCornerRadius="5dp"
            app:layout_constraintTop_toBottomOf="@id/white_time_cardview"
            app:layout_constraintStart_toStartOf="@id/white_time_cardview">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/white_inc_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_arrow_upward_black_24dp" />

            <TextView
                    android:id="@+id/white_increment_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/white_inc_image"
                    android:maxLines="1"
                    android:text="0s"
                    android:textColor="@color/lightGrey"
                    android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/black_inc"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="25dp"
            app:cardBackgroundColor="@color/Grey"
            app:cardCornerRadius="5dp"
            app:layout_constraintBottom_toTopOf="@id/black_time_cardview"
            app:layout_constraintEnd_toEndOf="@id/black_time_cardview">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/black_inc_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_arrow_upward_black_24dp" />

            <TextView
                    android:id="@+id/black_increment_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/black_inc_image"
                    android:maxLines="1"
                    android:text="0s"
                    android:textColor="@color/lightGrey"
                    android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/white_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/Grey"
            app:layout_constraintLeft_toRightOf="@id/white_inc"
            app:layout_constraintRight_toLeftOf="@id/white_moves"
            app:layout_constraintTop_toBottomOf="@id/white_time_cardview"
            app:cardCornerRadius="5dp"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/white_time_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_pause_black_24dp" />

            <TextView
                    android:id="@+id/white_delay_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/white_time_logo"
                    android:maxLines="1"
                    android:text="0s"
                    android:textColor="@color/lightGrey"
                    android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/black_delay"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/Grey"
            app:layout_constraintLeft_toRightOf="@id/black_moves"
            app:layout_constraintRight_toLeftOf="@id/black_inc"
            app:layout_constraintBottom_toTopOf="@id/black_time_cardview"
            app:cardCornerRadius="5dp"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/black_time_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_pause_black_24dp" />

            <TextView
                    android:id="@+id/black_delay_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/black_time_logo"
                    android:maxLines="1"
                    android:text="0s"
                    android:textColor="@color/lightGrey"
                    android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/white_moves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/Grey"
            app:layout_constraintEnd_toEndOf="@id/white_time_cardview"
            app:layout_constraintTop_toBottomOf="@id/white_time_cardview"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="5dp"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/white_moves_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_functions_black_24dp" />

            <TextView
                    android:id="@+id/white_moves_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/white_moves_logo"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/lightGrey"
                    android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/black_moves"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            app:cardBackgroundColor="@color/Grey"
            app:layout_constraintStart_toStartOf="@id/black_time_cardview"
            app:layout_constraintBottom_toTopOf="@id/black_time_cardview"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="5dp"
            >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/black_moves_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    app:srcCompat="@drawable/ic_functions_black_24dp" />

            <TextView
                    android:id="@+id/black_moves_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@id/black_moves_logo"
                    android:maxLines="1"
                    android:text="0"
                    android:textColor="@color/lightGrey"
                    android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/white_time_cardview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="45dp"
            android:clickable="false"
            app:cardBackgroundColor="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/white_tile_image"
            app:layout_constraintHeight_percent=".12"
            app:layout_constraintStart_toStartOf="@id/white_tile_image"
            app:layout_constraintWidth_percent=".55">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/white_child_constraint">
                <TextView
                        android:id="@+id/white_duration"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHeight_percent=".7"
                        android:autoSizeTextType='uniform'
                        android:background="@drawable/match_display_time"
                        android:elevation="3dp"
                        android:fontFamily="@font/monaco"
                        android:gravity="center"
                        android:padding="15dp"
                        android:scaleType="fitXY"
                        android:textColor="#DBDBDB"
                        />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/black_time_cardview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:rotation="180"
            android:clickable="false"
            app:cardBackgroundColor="#00FFFFFF"
            app:layout_constraintTop_toTopOf="@id/black_tile_image"
            app:layout_constraintHeight_percent=".12"
            app:layout_constraintEnd_toEndOf="@id/black_tile_image"
            app:layout_constraintWidth_percent=".55">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/black_child_constraint"
                >
            <TextView
                    android:id="@+id/black_duration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent=".7"
                    android:autoSizeTextType='uniform'
                    android:background="@drawable/match_display_time"
                    android:elevation="3dp"
                    android:fontFamily="@font/monaco"
                    android:gravity="center"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    android:textColor="#DBDBDB"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
            android:id="@+id/black_tile_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/black_tile"
            app:layout_constraintHeight_percent=".5"
            app:layout_constraintTop_toTopOf="parent"
            android:soundEffectsEnabled="false"
            />

    <ImageView
            android:id="@+id/white_tile_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/white_tile"
            app:layout_constraintHeight_percent=".5"
            app:layout_constraintTop_toBottomOf="@+id/black_tile_image"
            android:soundEffectsEnabled="false"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fab_layout_paused"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="@+id/white_tile_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/play_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="55dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_play_arrow_grey_26dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="7dp"
                app:layout_constraintLeft_toRightOf="@id/play_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_grey_24dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/reset_button"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                app:layout_constraintRight_toLeftOf="@id/play_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_restore_grey_26dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/rotate_button"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/reset_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_rotate_grey_24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/pause_button"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_pause_black_26dp"
            />
</androidx.constraintlayout.widget.ConstraintLayout>










